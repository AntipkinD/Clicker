<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="185dp"
        android:layout_y="231dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/system_accent3_700"
        android:textSize="@dimen/sizelool" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="-100dp"
        android:layout_toStartOf="@+id/txt_counter"
        android:layout_x="148dp"
        android:layout_y="215dp"
        app:srcCompat="@drawable/ground" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="173dp"
        android:layout_y="323dp"
        android:text="НИЧЕГО"
        android:textColor="@android:color/background_dark" />

    <Button
        android:layout_width="230dp"
        android:layout_height="74dp"
        android:layout_x="90dp"
        android:layout_y="343dp"
        android:backgroundTint="@android:color/system_accent2_700"
        android:onClick="onClickBtnAddNothing"
        android:text="Добавить ничего"
        android:textColor="@android:color/secondary_text_light_nodisable" />

</AbsoluteLayout>